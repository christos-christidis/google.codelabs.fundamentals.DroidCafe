<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- SOS: app:key must NOT be extracted to a string resource. This key is used to save the pref
    in the default SharedPreferences, so we don't want it to be possibly translated! -->
    <EditTextPreference
        app:key="signature"
        app:title="@string/signature_title"
        app:useSimpleSummaryProvider="true" />

    <!-- SOS: app:entries is what is shown, the actual string values are app:entryValues -->
    <ListPreference
        app:defaultValue="reply"
        app:entries="@array/reply_entries"
        app:entryValues="@array/reply_values"
        app:key="reply"
        app:title="@string/reply_title"
        app:useSimpleSummaryProvider="true" />
</androidx.preference.PreferenceScreen>
